    <div class="progress-container">
        <div class="progress-bar" id="progressBar"></div>
    </div>

    <button class="fab" onclick="exportWork()" title="Export Your Work">üíæ</button>

    <script>
        // Mode Toggle
        function setMode(mode) {
            const body = document.body;
            const buttons = document.querySelectorAll('.mode-btn');
            
            buttons.forEach(btn => btn.classList.remove('active'));
            
            if (mode === 'learn') {
                body.className = 'learn-mode';
                buttons[0].classList.add('active');
            } else {
                body.className = 'work-mode';
                buttons[1].classList.add('active');
                // Auto-expand all cards in work mode
                document.querySelectorAll('.technique-card').forEach(card => {
                    card.classList.add('expanded');
                });
            }
        }

        // Toggle Card
        function toggleCard(num) {
            const card = document.getElementById(`technique-${num}`);
            card.classList.toggle('expanded');
        }

        // Scroll to Technique
        function scrollToTechnique(num) {
            const card = document.getElementById(`technique-${num}`);
            card.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Highlight the card briefly
            card.style.borderColor = 'var(--accent-cyan)';
            setTimeout(() => {
                card.style.borderColor = 'var(--border)';
            }, 2000);

            // Expand if not already
            if (!card.classList.contains('expanded')) {
                card.classList.add('expanded');
            }
        }

        // Progress Tracking
        function updateProgress() {
            const textareas = document.querySelectorAll('.worksheet-input');
            const filled = Array.from(textareas).filter(t => t.value.trim().length > 0).length;
            const percentage = (filled / textareas.length) * 100;
            
            document.getElementById('progressBar').style.width = `${percentage}%`;
            
            // Auto-save
            saveWork();
        }

        // Add event listeners to all textareas
        document.querySelectorAll('.worksheet-input').forEach(textarea => {
            textarea.addEventListener('input', updateProgress);
        });

        // Save Work
        function saveWork() {
            const data = {};
            document.querySelectorAll('.worksheet-input').forEach((textarea, index) => {
                data[`technique_${index}`] = textarea.value;
            });
            localStorage.setItem('intensificationWork', JSON.stringify(data));
        }

        // Load Work
        function loadWork() {
            const saved = localStorage.getItem('intensificationWork');
            if (saved) {
                const data = JSON.parse(saved);
                document.querySelectorAll('.worksheet-input').forEach((textarea, index) => {
                    if (data[`technique_${index}`]) {
                        textarea.value = data[`technique_${index}`];
                    }
                });
                updateProgress();
            }
        }

        // Export Work
        function exportWork() {
            let exportText = '# INTENSIFICATION FRAMEWORK - MY WORK\n\n';
            exportText += 'Eugene Schwartz - Chapter 7\n';
            exportText += '‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê\n\n';

            const cards = document.querySelectorAll('.technique-card');
            cards.forEach((card, index) => {
                const num = card.querySelector('.technique-num').textContent;
                const title = card.querySelector('.technique-title').textContent;
                const input = card.querySelector('.worksheet-input');
                
                if (input && input.value.trim()) {
                    exportText += `## ${num} ${title}\n\n`;
                    exportText += `${input.value.trim()}\n\n`;
                    exportText += '‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n\n';
                }
            });

            // Create download
            const blob = new Blob([exportText], { type: 'text/markdown' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'intensification-workflow.md';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            // Ctrl/Cmd + S to save
            if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                e.preventDefault();
                saveWork();
                
                // Show saved indicator
                const fab = document.querySelector('.fab');
                fab.textContent = '‚úì';
                setTimeout(() => {
                    fab.textContent = 'üíæ';
                }, 1000);
            }
            
            // Ctrl/Cmd + E to export
            if ((e.ctrlKey || e.metaKey) && e.key === 'e') {
                e.preventDefault();
                exportWork();
            }
        });

        // Load on page load
        window.addEventListener('load', loadWork);

        // Update active nav button on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const num = entry.target.dataset.technique;
                    document.querySelectorAll('.workflow-step-btn').forEach(btn => {
                        btn.classList.remove('active');
                    });
                    document.querySelectorAll('.workflow-step-btn')[num - 1]?.classList.add('active');
                }
            });
        }, { threshold: 0.5 });

        document.querySelectorAll('.technique-card').forEach(card => {
            observer.observe(card);
        });
    </script>
</body>
</html>
