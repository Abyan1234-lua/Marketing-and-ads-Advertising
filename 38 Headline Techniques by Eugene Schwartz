        </div>
        <div class="divider"></div>
        <button class="export-btn" onclick="exportWork()">Export</button>
    </div>

    <script>
        // Mode Toggle
        function setMode(mode) {
            const body = document.body;
            const buttons = document.querySelectorAll('.mode-btn');
            
            buttons.forEach(btn => btn.classList.remove('active'));
            
            if (mode === 'learn') {
                body.className = 'learn-mode';
                buttons[0].classList.add('active');
            } else {
                body.className = 'work-mode';
                buttons[1].classList.add('active');
            }
        }

        // Scroll to Category
        function scrollToCategory(id) {
            const element = document.getElementById(id);
            element.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Progress Tracking
        function updateProgress() {
            const textareas = document.querySelectorAll('.worksheet-input');
            const total = textareas.length;
            const filled = Array.from(textareas).filter(t => t.value.trim().length > 0).length;
            const percentage = Math.round((filled / total) * 100);

            // Update text
            document.getElementById('completedCount').textContent = `${filled}/38`;
            document.getElementById('progressPercent').textContent = `${percentage}%`;

            // Update progress ring
            const circle = document.getElementById('progressCircle');
            const circumference = 163.36; // 2 * PI * 26
            const offset = circumference - (percentage / 100) * circumference;
            circle.style.strokeDashoffset = offset;

            // Save
            saveWork();
        }

        // Add event listeners to all textareas
        document.querySelectorAll('.worksheet-input').forEach(textarea => {
            textarea.addEventListener('input', updateProgress);
        });

        // Save Work
        function saveWork() {
            const data = {};
            document.querySelectorAll('.worksheet-input').forEach((textarea, index) => {
                data[`technique_${index}`] = textarea.value;
            });
            localStorage.setItem('verbalizationWork', JSON.stringify(data));
        }

        // Load Work
        function loadWork() {
            const saved = localStorage.getItem('verbalizationWork');
            if (saved) {
                const data = JSON.parse(saved);
                document.querySelectorAll('.worksheet-input').forEach((textarea, index) => {
                    if (data[`technique_${index}`]) {
                        textarea.value = data[`technique_${index}`];
                    }
                });
                updateProgress();
            }
        }

        // Export Work
        function exportWork() {
            let exportText = '# 38 VERBALIZATION TECHNIQUES - MY HEADLINES\n\n';
            exportText += 'Eugene Schwartz - Chapter 4\n';
            exportText += '‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê\n\n';

            const cards = document.querySelectorAll('.technique-card');
            cards.forEach((card) => {
                const num = card.querySelector('.technique-num').textContent;
                const title = card.querySelector('.technique-title').textContent;
                const input = card.querySelector('.worksheet-input');
                
                if (input && input.value.trim()) {
                    exportText += `## ${num}: ${title}\n\n`;
                    exportText += `${input.value.trim()}\n\n`;
                    exportText += '‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n\n';
                }
            });

            // Create download
            const blob = new Blob([exportText], { type: 'text/markdown' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'verbalization-headlines.md';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                e.preventDefault();
                saveWork();
                
                const btn = document.querySelector('.export-btn');
                btn.textContent = 'Saved!';
                setTimeout(() => {
                    btn.textContent = 'Export';
                }, 1500);
            }
            
            if ((e.ctrlKey || e.metaKey) && e.key === 'e') {
                e.preventDefault();
                exportWork();
            }
        });

        // Load on page load
        window.addEventListener('load', loadWork);

        // Smooth scroll observer for active states
        const observerOptions = {
            threshold: 0.5,
            rootMargin: '-20% 0px -50% 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.technique-card').forEach(card => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(card);
        });
    </script>
</body>
</html>
