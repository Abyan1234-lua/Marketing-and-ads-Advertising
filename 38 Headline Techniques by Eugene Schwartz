    <div class="progress-bar">
        <div class="progress-fill" id="progressFill"></div>
    </div>

    <div class="floating-toolbar">
        <div class="toolbar-stat">
            <span class="toolbar-label">Completed</span>
            <span class="toolbar-value" id="completedCount">0/38</span>
        </div>
        <div class="divider"></div>
        <div class="toolbar-stat">
            <span class="toolbar-label">Progress</span>
            <span class="toolbar-value" id="progressPercent">0%</span>
        </div>
        <div class="divider"></div>
        <button class="export-btn" onclick="exportWork()">Export</button>
    </div>

    <script>
        // Track completion
        const textareas = document.querySelectorAll('.input-field');
        const progressFill = document.getElementById('progressFill');
        const completedCount = document.getElementById('completedCount');
        const progressPercent = document.getElementById('progressPercent');

        function updateProgress() {
            const total = textareas.length;
            const filled = Array.from(textareas).filter(t => t.value.trim().length > 0).length;
            const percentage = Math.round((filled / total) * 100);

            completedCount.textContent = `${filled}/38`;
            progressPercent.textContent = `${percentage}%`;
            progressFill.style.width = `${percentage}%`;

            // Save to localStorage
            saveWork();
        }

        // Add event listeners
        textareas.forEach(textarea => {
            textarea.addEventListener('input', updateProgress);
            textarea.addEventListener('blur', saveWork);
        });

        // Save work to localStorage
        function saveWork() {
            const data = {};
            textareas.forEach((textarea, index) => {
                data[`technique_${index}`] = textarea.value;
            });
            localStorage.setItem('headlineWorkbook', JSON.stringify(data));
        }

        // Load saved work
        function loadWork() {
            const saved = localStorage.getItem('headlineWorkbook');
            if (saved) {
                const data = JSON.parse(saved);
                textareas.forEach((textarea, index) => {
                    if (data[`technique_${index}`]) {
                        textarea.value = data[`technique_${index}`];
                    }
                });
                updateProgress();
            }
        }

        // Export functionality
        function exportWork() {
            const cards = document.querySelectorAll('.technique-card');
            let exportText = '# MY 38 HEADLINE TECHNIQUES WORKBOOK\n\n';
            exportText += 'Generated from the Eugene Schwartz Verbalization Framework\n\n';
            exportText += '---\n\n';

            cards.forEach((card, index) => {
                const num = card.querySelector('.technique-num').textContent;
                const name = card.querySelector('.technique-name').textContent;
                const description = card.querySelector('.technique-description').textContent;
                const example = card.querySelector('.technique-example').textContent;
                const input = card.querySelector('.input-field').value;

                exportText += `## ${num} ${name}\n\n`;
                exportText += `**Description:** ${description}\n\n`;
                exportText += `**${example}**\n\n`;
                
                if (input.trim()) {
                    exportText += `**My Headline:**\n${input}\n\n`;
                } else {
                    exportText += `**My Headline:** [Not yet written]\n\n`;
                }
                
                exportText += '---\n\n';
            });

            // Create download
            const blob = new Blob([exportText], { type: 'text/markdown' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'my-headline-workbook.md';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        // Load on page load
        window.addEventListener('load', loadWork);

        // Stagger card animations
        const cards = document.querySelectorAll('.technique-card');
        cards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100 + (index * 30));
        });
    </script>
</body>
</html>
